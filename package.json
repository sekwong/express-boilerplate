{
  "name": "simple-api",
  "version": "1.0.0",
  "description": "Kick Start",
  "main": "dist",
  "scripts": {
    "dev": "nodemon -w src --exec \"babel-node src --presets es2015,stage-0\"",
    "build": "babel src -s -D -d dist --presets es2015,stage-0",
    "start": "node dist",
    "prestart": "npm run -s build",
    "test": "eslint src && npm run build && ./node_modules/.bin/mocha --compilers js:babel-core/register"
  },
  "author": "eddie",
  "license": "ISC",
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "mocha": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "dependencies": {
    "body-parser": "^1.17.0",
    "compression": "^1.6.2",
    "cors": "^2.8.1",
    "express": "^4.15.0",
    "mongoose": "^4.8.5",
    "morgan": "^1.8.1",
    "resource-router-middleware": "^0.6.0"
  },
  "devDependencies": {
    "babel-polyfill": "^6.23.0",
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "chai": "^3.5.0",
    "eslint": "^3.16.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0"
  }
}
